{
  "name": "@vjscc/modal",
  "version": "1.1.0",
  "license": "MIT",
  "keywords": [
    "vjscc",
    "modal"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vjscc/modal.git"
  },
  "homepage": "https://github.com/vjscc/modal#readme",
  "bugs": {
    "url": "https://github.com/vjscc/modal/issues"
  },
  "files": [
    "package.json",
    "README.md",
    "README_zh.md",
    "LICENSE",
    "dist"
  ],
  "global": "VjsccModal",
  "types": "dist/modal.d.ts",
  "main": "dist/modal.js",
  "browser": "dist/browser/modal.min.js",
  "module": "dist/es/modal.js",
  "scripts": {
    "start": "parcel ./src/test/index.html --cache-dir node_modules/.parcel --out-dir node_modules/.parcel",
    "build:js": "rollup -c && node scripts/removeRedundancyDeclarations.js",
    "build:css": "parcel build ./src/index.less --out-dir dist --experimental-scope-hoisting --out-file modal.min.css --cache-dir node_modules/.parcel",
    "build": "npm run build:js && npm run build:css",
    "pretest": "npm run build",
    "jest": "jest",
    "test": "parcel ./test/index.html --cache-dir node_modules/.parcel --out-dir node_modules/.parcel",
    "lint": "eslint src"
  },
  "dependencies": {
    "@vjscc/utils": "^0.2.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.4",
    "less": "^4.1.1",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.4.1",
    "rollup": "^2.57.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-ts": "^1.4.7",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
